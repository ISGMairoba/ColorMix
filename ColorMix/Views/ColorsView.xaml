<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="ColorMix.Views.ColorsView"
    Title="ColorsView">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*, Auto, Auto, Auto" Padding="0,0,10,0" ColumnSpacing="5">
            <!-- Normal State -->
            <Label 
                Grid.Column="0"
                Text="Colors" 
                FontSize="20" 
                FontAttributes="Bold" 
                VerticalOptions="Center" 
                TextColor="{AppThemeBinding Light=Black, Dark=White}"
                IsVisible="{Binding IsSearching, Converter={toolkit:InvertedBoolConverter}}"/>

            <!-- Search State -->
            <SearchBar 
                Grid.Column="0" 
                Placeholder="Search..." 
                Text="{Binding SearchText}" 
                VerticalOptions="Center"
                BackgroundColor="Transparent"
                IsVisible="{Binding IsSearching}"/>

            <!-- Search Icon (Toggle) -->
            <ImageButton
                Grid.Column="1"
                Source="{AppThemeBinding Light=search_black.png, Dark=search_white.png}"
                Command="{Binding ToggleSearchCommand}"
                HeightRequest="24"
                WidthRequest="24"
                VerticalOptions="Center"
                IsVisible="{Binding IsSearching, Converter={toolkit:InvertedBoolConverter}}">
                 <ImageButton.Source>
                    <FontImageSource FontFamily="IconFont" Glyph="&#xf002;" Color="{AppThemeBinding Light=Black, Dark=White}" Size="20"/>
                </ImageButton.Source>
            </ImageButton>

             <!-- Close Search Icon -->
            <ImageButton
                Grid.Column="1"
                Command="{Binding ToggleSearchCommand}"
                HeightRequest="24"
                WidthRequest="24"
                VerticalOptions="Center"
                IsVisible="{Binding IsSearching}">
                 <ImageButton.Source>
                    <FontImageSource FontFamily="IconFont" Glyph="&#xf00d;" Color="{AppThemeBinding Light=Black, Dark=White}" Size="20"/>
                </ImageButton.Source>
            </ImageButton>

            <!-- Sort Icon -->
            <ImageButton
                Grid.Column="2"
                Command="{Binding OpenSortCommand}"
                HeightRequest="24"
                WidthRequest="24"
                VerticalOptions="Center"
                IsVisible="{Binding IsSearching, Converter={toolkit:InvertedBoolConverter}}">
                <ImageButton.Source>
                    <FontImageSource FontFamily="IconFont" Glyph="&#xf160;" Color="{AppThemeBinding Light=Black, Dark=White}" Size="20"/>
                </ImageButton.Source>
            </ImageButton>

            <!-- Select Icon -->
            <ImageButton
                Grid.Column="3"
                Command="{Binding ToggleSelectionModeCommand}"
                HeightRequest="24"
                WidthRequest="24"
                VerticalOptions="Center"
                IsVisible="{Binding IsSearching, Converter={toolkit:InvertedBoolConverter}}">
                <ImageButton.Source>
                    <FontImageSource FontFamily="IconFont" Glyph="&#xf14a;" Color="{AppThemeBinding Light=Black, Dark=White}" Size="20"/>
                </ImageButton.Source>
            </ImageButton>
        </Grid>
    </Shell.TitleView>

    <Grid RowDefinitions="Auto, *">
        <!-- Batch Action Toolbar -->
        <Grid 
            Grid.Row="0" 
            IsVisible="{Binding IsSelectionMode}" 
            BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#303030}"
            Padding="10"
            ColumnDefinitions="*,*,*,*">
            
            <Button Grid.Column="0" Text="All" Command="{Binding SelectAllCommand}" Margin="2" FontSize="12"/>
            <Button Grid.Column="1" Text="None" Command="{Binding DeselectAllCommand}" Margin="2" FontSize="12"/>
            <Button Grid.Column="2" Text="Copy" Command="{Binding BatchDuplicateCommand}" Margin="2" FontSize="12"/>
            <Button Grid.Column="3" Text="Delete" Command="{Binding BatchDeleteCommand}" BackgroundColor="{StaticResource MrbRed}" Margin="2" FontSize="12"/>
        </Grid>

        <ScrollView Grid.Row="1">
            <CollectionView HorizontalOptions="Center" ItemsSource="{Binding ColorList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="10,5" HeightRequest="85" HasShadow="True" CornerRadius="10">
                            <Grid RowDefinitions="25, *, 25" ColumnDefinitions="Auto, 80, *">
                                
                                <!-- Selection Checkbox -->
                                <CheckBox 
                                    Grid.Row="0" 
                                    Grid.RowSpan="3"
                                    Grid.Column="0"
                                    IsChecked="{Binding IsSelected}"
                                    IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsSelectionMode}"
                                    VerticalOptions="Center"
                                    Margin="0,0,10,0"/>

                                <!-- Top Action Buttons -->
                                <Grid
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    ColumnDefinitions="*, 35,35,35"
                                    RowDefinitions="*"
                                    IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsSelectionMode, Converter={toolkit:InvertedBoolConverter}}">
                                    <!-- Edit Button -->
                                    <Label
                                        Grid.Column="1"
                                        FontFamily="IconFont"
                                        FontSize="20"
                                        HorizontalOptions="End"
                                        Style="{StaticResource SecondaryLabel}"
                                        Text="&#xE80c;"
                                        VerticalOptions="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditCommand}"
                                                CommandParameter="{Binding .}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <!-- Duplicate Button -->
                                    <Label
                                        Grid.Column="2"
                                        FontFamily="IconFont"
                                        FontSize="20"
                                        HorizontalOptions="End"
                                        Style="{StaticResource SecondaryLabel}"
                                        Text="&#xf0c5;"
                                        VerticalOptions="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DuplicateCommand}"
                                                CommandParameter="{Binding .}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <!-- Share Button -->
                                    <Label
                                        Grid.Column="3"
                                        FontFamily="IconFont"
                                        FontSize="20"
                                        HorizontalOptions="End"
                                        Style="{StaticResource SecondaryLabel}"
                                        Text="&#xf1e0;"
                                        VerticalOptions="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ShareCommand}"
                                                CommandParameter="{Binding .}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                </Grid>
                                
                                <!--Color Preview-->
                                <RoundRectangle
                                    Grid.Row="0"
                                    Grid.RowSpan="3"
                                    Grid.Column="1"
                                    Margin="0"
                                    BackgroundColor="{Binding Color}"
                                    CornerRadius="10"
                                    HeightRequest="70"
                                    HorizontalOptions="Start"
                                    Stroke="{AppThemeBinding Dark=White,
                                                             Light=Black}"
                                    StrokeThickness="3"
                                    VerticalOptions="Center"
                                    WidthRequest="70" />
                               <!-- Name & Color Code-->
                                <Grid 
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    HorizontalOptions="Start"
                                    Grid.RowSpan="3"
                                    RowDefinitions="*, 30">
                                   
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontAttributes="Bold"
                                        FontSize="24"
                                        HorizontalOptions="Start"
                                        Text="{Binding ColorName}"
                                        VerticalOptions="Center"
                                        LineBreakMode="HeadTruncation"/>
                                    
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        FontAttributes="Bold"
                                        HorizontalOptions="Center"
                                        Style="{StaticResource SecondaryLabel}"
                                        Text="{Binding DisplayText}"
                                        VerticalOptions="Start" />

                                </Grid>
                                <!-- Delete Button -->
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    FontFamily="IconFont"
                                    FontSize="20"
                                    HorizontalOptions="End"
                                    Text="&#xE80d;"
                                    TextColor="{StaticResource MrbRed}"
                                    VerticalOptions="Center"
                                    IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsSelectionMode, Converter={toolkit:InvertedBoolConverter}}">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCommand}"
                                            CommandParameter="{Binding .}" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </Grid>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>