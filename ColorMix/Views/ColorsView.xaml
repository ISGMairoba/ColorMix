<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:ColorMix.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:helpers="clr-namespace:ColorMix.Helpers"
    x:Class="ColorMix.Views.ColorsView"
    Title="ColorsView">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*, Auto" Padding="0,0,10,0">
            <!-- Normal Toolbar -->
            <Grid 
                Grid.Column="0" 
                Grid.ColumnSpan="2"
                ColumnDefinitions="*, Auto, Auto, Auto" 
                ColumnSpacing="15"
                IsVisible="{Binding IsSelectionMode, Converter={toolkit:InvertedBoolConverter}}">
                
                <!-- Title / Search Bar -->
                <Grid Grid.Column="0">
                    <Label 
                        Text="Colors" 
                        FontSize="20" 
                        FontAttributes="Bold" 
                        VerticalOptions="Center" 
                        TextColor="{AppThemeBinding Light=Black, Dark=White}"
                        IsVisible="{Binding IsSearching, Converter={toolkit:InvertedBoolConverter}}"/>

                    <SearchBar 
                        Placeholder="Search..." 
                        Text="{Binding SearchText}" 
                        VerticalOptions="Center"
                        BackgroundColor="Transparent"
                        IsVisible="{Binding IsSearching}"/>
                </Grid>

                <!-- Search Icon -->
                <ImageButton
                    Grid.Column="1"
                    Command="{Binding ToggleSearchCommand}"
                    HeightRequest="30"
                    WidthRequest="30"
                    VerticalOptions="Center">
                    <ImageButton.Source>
                        <FontImageSource 
                            FontFamily="IconFont" 
                            Glyph="{x:Static helpers:FontIcons.Search}" 
                            Color="{AppThemeBinding Light=Black, Dark=White}" 
                            Size="14"/>
                    </ImageButton.Source>
                    <ImageButton.Triggers>
                        <DataTrigger TargetType="ImageButton" Binding="{Binding IsSearching}" Value="True">
                            <Setter Property="Source">
                                <Setter.Value>
                                    <FontImageSource 
                                        FontFamily="IconFont" 
                                        Glyph="{x:Static helpers:FontIcons.SearchCancel}" 
                                        Color="{AppThemeBinding Light=Black, Dark=White}" 
                                        Size="14"/>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </ImageButton.Triggers>
                </ImageButton>

                <!-- Sort Icon -->
                <ImageButton
                    Grid.Column="2"
                    Command="{Binding OpenSortCommand}"
                    HeightRequest="30"
                    WidthRequest="30"
                    VerticalOptions="Center"
                    IsVisible="{Binding IsSearching, Converter={toolkit:InvertedBoolConverter}}">
                    <ImageButton.Source>
                        <FontImageSource 
                            FontFamily="IconFont" 
                            Glyph="{x:Static helpers:FontIcons.Sort}" 
                            Color="{AppThemeBinding Light=Black, Dark=White}" 
                            Size="14"/>
                    </ImageButton.Source>
                </ImageButton>

                <!-- Select Icon -->
                <ImageButton
                    Grid.Column="3"
                    Command="{Binding ToggleSelectionModeCommand}"
                    HeightRequest="30"
                    WidthRequest="30"
                    VerticalOptions="Center"
                    IsVisible="{Binding IsSearching, Converter={toolkit:InvertedBoolConverter}}">
                    <ImageButton.Source>
                        <FontImageSource 
                            FontFamily="IconFont" 
                            Glyph="{x:Static helpers:FontIcons.Selection}" 
                            Color="{AppThemeBinding Light=Black, Dark=White}" 
                            Size="14"/>
                    </ImageButton.Source>
                </ImageButton>
            </Grid>

            <!-- Selection Mode Toolbar -->
            <Grid 
                Grid.Column="1" 
                ColumnDefinitions="Auto, Auto, Auto, Auto, Auto, Auto" 
                ColumnSpacing="15"
                IsVisible="{Binding IsSelectionMode}">
                
                <Button 
                    Grid.Column="0" 
                    Text="Cancel" 
                    Command="{Binding ToggleSelectionModeCommand}" 
                    BackgroundColor="Transparent" 
                    TextColor="{AppThemeBinding Light=Black, Dark=White}"
                    FontAttributes="Bold"
                    Padding="0"/>

                <Button 
                    Grid.Column="1" 
                    Text="All" 
                    Command="{Binding SelectAllCommand}" 
                    BackgroundColor="Transparent" 
                    TextColor="{AppThemeBinding Light=Black, Dark=White}"
                    FontAttributes="Bold"
                    Padding="0"/>

                <Button 
                    Grid.Column="2" 
                    Text="None" 
                    Command="{Binding DeselectAllCommand}" 
                    BackgroundColor="Transparent" 
                    TextColor="{AppThemeBinding Light=Black, Dark=White}"
                    FontAttributes="Bold"
                    Padding="0"/>

                <ImageButton
                    Grid.Column="3"
                    Command="{Binding BatchShareCommand}"
                    HeightRequest="30"
                    WidthRequest="30"
                    VerticalOptions="Center">
                    <ImageButton.Source>
                        <FontImageSource 
                            FontFamily="IconFont" 
                            Glyph="{x:Static helpers:FontIcons.Share}" 
                            Color="{AppThemeBinding Light=Black, Dark=White}" 
                            Size="14"/>
                    </ImageButton.Source>
                </ImageButton>

                <ImageButton
                    Grid.Column="4"
                    Command="{Binding BatchDuplicateCommand}"
                    HeightRequest="30"
                    WidthRequest="30"
                    VerticalOptions="Center">
                    <ImageButton.Source>
                        <FontImageSource 
                            FontFamily="IconFont" 
                            Glyph="{x:Static helpers:FontIcons.Copy}" 
                            Color="{AppThemeBinding Light=Black, Dark=White}" 
                            Size="14"/>
                    </ImageButton.Source>
                </ImageButton>

                <ImageButton
                    Grid.Column="5"
                    Command="{Binding BatchDeleteCommand}"
                    HeightRequest="30"
                    WidthRequest="30"
                    VerticalOptions="Center">
                    <ImageButton.Source>
                        <FontImageSource 
                            FontFamily="IconFont" 
                            Glyph="{x:Static helpers:FontIcons.Delete}" 
                            Color="{StaticResource MrbRed}" 
                            Size="14"/>
                    </ImageButton.Source>
                </ImageButton>
            </Grid>
        </Grid>
    </Shell.TitleView>

    <Grid RowDefinitions="*">

        <ScrollView Grid.Row="1">
            <CollectionView HorizontalOptions="Center" ItemsSource="{Binding ColorList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:ColorsModel">
                        <Frame Margin="10,5" HeightRequest="85" HasShadow="True" CornerRadius="10">
                            <Grid RowDefinitions="25, *, 25" ColumnDefinitions="Auto, 80, *">
                                
                                <!-- Selection Checkbox -->
                                <CheckBox 
                                    Grid.Row="0" 
                                    Grid.RowSpan="3"
                                    Grid.Column="0"
                                    IsChecked="{Binding IsSelected}"
                                    IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsSelectionMode}"
                                    VerticalOptions="Center"
                                    Margin="0,0,10,0"/>

                                <!-- Top Action Buttons -->
                                <Grid
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    ColumnDefinitions="*, 35,35,35"
                                    RowDefinitions="*"
                                    IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsSelectionMode, Converter={toolkit:InvertedBoolConverter}}">
                                    <!-- Edit Button -->
                                    <Label
                                        Grid.Column="1"
                                        FontFamily="IconFont"
                                        FontSize="20"
                                        HorizontalOptions="End"
                                        Style="{StaticResource SecondaryLabel}"
                                        Text="&#xE80c;"
                                        VerticalOptions="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditCommand}"
                                                CommandParameter="{Binding .}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <!-- Duplicate Button -->
                                    <Label
                                        Grid.Column="2"
                                        FontFamily="IconFont"
                                        FontSize="20"
                                        HorizontalOptions="End"
                                        Style="{StaticResource SecondaryLabel}"
                                        Text="&#xf0c5;"
                                        VerticalOptions="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DuplicateCommand}"
                                                CommandParameter="{Binding .}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <!-- Share Button -->
                                    <Label
                                        Grid.Column="3"
                                        FontFamily="IconFont"
                                        FontSize="20"
                                        HorizontalOptions="End"
                                        Style="{StaticResource SecondaryLabel}"
                                        Text="&#xf1e0;"
                                        VerticalOptions="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ShareCommand}"
                                                CommandParameter="{Binding .}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                </Grid>
                                
                                <!--Color Preview-->
                                <RoundRectangle
                                    Grid.Row="0"
                                    Grid.RowSpan="3"
                                    Grid.Column="1"
                                    Margin="0"
                                    BackgroundColor="{Binding Color}"
                                    CornerRadius="10"
                                    HeightRequest="70"
                                    HorizontalOptions="Start"
                                    Stroke="{AppThemeBinding Dark=White,
                                                             Light=Black}"
                                    StrokeThickness="3"
                                    VerticalOptions="Center"
                                    WidthRequest="70" />
                               <!-- Name & Color Code-->
                                <Grid 
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    HorizontalOptions="Start"
                                    Grid.RowSpan="3"
                                    RowDefinitions="*, 30">
                                   
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontAttributes="Bold"
                                        FontSize="24"
                                        HorizontalOptions="Start"
                                        Text="{Binding ColorName}"
                                        VerticalOptions="Center"
                                        LineBreakMode="HeadTruncation"/>
                                    
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        FontAttributes="Bold"
                                        HorizontalOptions="Center"
                                        Style="{StaticResource SecondaryLabel}"
                                        Text="{Binding DisplayText}"
                                        VerticalOptions="Start" />

                                </Grid>
                                <!-- Delete Button -->
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    FontFamily="IconFont"
                                    FontSize="20"
                                    HorizontalOptions="End"
                                    Text="&#xE80d;"
                                    TextColor="{StaticResource MrbRed}"
                                    VerticalOptions="Center"
                                    IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsSelectionMode, Converter={toolkit:InvertedBoolConverter}}">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCommand}"
                                            CommandParameter="{Binding .}" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </Grid>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>