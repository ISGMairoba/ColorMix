<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ColorMix.Views.CreatePaletteView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:ColorMix"
    xmlns:helpers="clr-namespace:ColorMix.Helpers"
    xmlns:vm="clr-namespace:ColorMix.ViewModel"
    Title="Create Palette">

    <ContentPage.Resources>
        <converters:ColorToRGBConverter x:Key="ColorToRGBConverter" />

        <Style x:Key="CustomRadioButton" TargetType="RadioButton">
            <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="ControlTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid
                            ColumnDefinitions="Auto, *"
                            ColumnSpacing="6"
                            VerticalOptions="Center">
                            <!--  Outer Ring  -->
                            <Border
                                Grid.Column="0"
                                BackgroundColor="Transparent"
                                HeightRequest="20"
                                HorizontalOptions="Center"
                                Stroke="{TemplateBinding TextColor}"
                                StrokeShape="RoundRectangle 10"
                                StrokeThickness="2"
                                VerticalOptions="Center"
                                WidthRequest="20">
                                <!--  Inner Circle (Check mark)  -->
                                <BoxView
                                    x:Name="CheckMark"
                                    BackgroundColor="Transparent"
                                    CornerRadius="5"
                                    HeightRequest="10"
                                    HorizontalOptions="Center"
                                    Opacity="0"
                                    VerticalOptions="Center"
                                    WidthRequest="10"
                                    Color="{TemplateBinding TextColor}" />
                            </Border>

                            <ContentPresenter
                                Grid.Column="1"
                                HorizontalOptions="Start"
                                VerticalOptions="Center" />

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroupList>
                                    <VisualStateGroup x:Name="CheckedStates">
                                        <VisualState x:Name="Checked">
                                            <VisualState.Setters>
                                                <Setter TargetName="CheckMark" Property="BoxView.Opacity" Value="1" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Unchecked">
                                            <VisualState.Setters>
                                                <Setter TargetName="CheckMark" Property="BoxView.Opacity" Value="0" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateGroupList>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CheckedStates">
                        <VisualState x:Name="Checked">
                            <VisualState.Setters>
                                <Setter Property="TextColor" Value="{StaticResource MrbUNBlue}" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Unchecked">
                            <VisualState.Setters>
                                <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <!--  Toolbar in Shell.TitleView (top-right)  -->
    <Shell.TitleView>
        <Grid ColumnDefinitions="*, Auto">
            <Label
                Grid.Column="0"
                FontAttributes="Bold"
                FontSize="20"
                Text="Create Palette"
                TextColor="{AppThemeBinding Light={StaticResource MrbSpaceCadet},
                                            Dark={StaticResource White}}"
                VerticalOptions="Center" />

            <HorizontalStackLayout
                Grid.Column="1"
                Margin="15,0"
                Spacing="15"
                VerticalOptions="Center">

                <!--  Save Palette  -->
                <ImageButton
                    Command="{Binding SavePaletteCommand}"
                    HeightRequest="25"
                    VerticalOptions="Center"
                    WidthRequest="30">
                    <ImageButton.Source>
                        <FontImageSource
                            FontFamily="fontello"
                            Glyph="{x:Static helpers:FontIcons.SavePalette}"
                            Size="24"
                            Color="{AppThemeBinding Light={StaticResource MrbSpaceCadet},
                                                    Dark={StaticResource White}}" />
                    </ImageButton.Source>
                </ImageButton>

                <!--  Add Color to Palette  -->
                <ImageButton
                    Command="{Binding AddColorCommand}"
                    HeightRequest="25"
                    VerticalOptions="Center"
                    WidthRequest="30">
                    <ImageButton.Source>
                        <FontImageSource
                            FontFamily="fontello"
                            Glyph="{x:Static helpers:FontIcons.AddColor}"
                            Size="24"
                            Color="{AppThemeBinding Light={StaticResource MrbSpaceCadet},
                                                    Dark={StaticResource White}}" />
                    </ImageButton.Source>
                </ImageButton>

                <!--  Remove Color from Palette  -->
                <ImageButton
                    Command="{Binding RemoveColorCommand}"
                    HeightRequest="25"
                    IsVisible="{Binding IsDeleteVisible}"
                    VerticalOptions="Center"
                    WidthRequest="30">
                    <ImageButton.Source>
                        <FontImageSource
                            FontFamily="fontello"
                            Glyph="{x:Static helpers:FontIcons.RemoveColor}"
                            Size="24"
                            Color="{AppThemeBinding Light={StaticResource MrbSpaceCadet},
                                                    Dark={StaticResource White}}" />
                    </ImageButton.Source>
                </ImageButton>
            </HorizontalStackLayout>
        </Grid>
    </Shell.TitleView>

    <!--  Main Content with proper ScrollView  -->
    <Grid ColumnDefinitions="*" RowDefinitions="Auto, Auto, *, Auto">
        <!--  Palette Colors  -->
        <Frame Grid.Row="0">
            <VerticalStackLayout Spacing="10">
                <Label
                    FontAttributes="Bold"
                    FontSize="16"
                    Text="Palette Colors" />

                <CollectionView
                    HeightRequest="80"
                    ItemsSource="{Binding PaletteColors}"
                    SelectedItem="{Binding SelectedPaletteColor}"
                    SelectionMode="Single">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2">
                                <BoxView
                                    HeightRequest="40"
                                    WidthRequest="40"
                                    Color="{Binding HexValue}">
                                    <BoxView.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CreatePaletteViewModel}}, Path=AddColorToMixCommand}"
                                            CommandParameter="{Binding .}"
                                            NumberOfTapsRequired="2" />
                                    </BoxView.GestureRecognizers>
                                </BoxView>
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="10"
                                    HorizontalOptions="Center"
                                    Text="{Binding ColorName}" />
                                <Label
                                    FontSize="8"
                                    HorizontalOptions="Center"
                                    Text="{Binding HexValue}"
                                    TextColor="{AppThemeBinding Light={StaticResource Gray600},
                                                                Dark={StaticResource Gray400}}" />
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup Name="CommonStates">
                                        <VisualState Name="Normal" />
                                        <VisualState Name="Selected">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </Frame>

        <!--  Blend Mode  -->
        <Frame Grid.Row="1">
            <VerticalStackLayout Spacing="5">
                <Label
                    FontAttributes="Bold"
                    FontSize="16"
                    Text="Blend Mode" />
                <HorizontalStackLayout Spacing="20">
                    <RadioButton
                        Content="RGB"
                        GroupName="BlendMode"
                        IsChecked="True"
                        Style="{StaticResource CustomRadioButton}" />
                    <RadioButton
                        Content="LAB"
                        GroupName="BlendMode"
                        Style="{StaticResource CustomRadioButton}" />
                    <RadioButton
                        Content="HLS"
                        GroupName="BlendMode"
                        Style="{StaticResource CustomRadioButton}" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>

        <!--  Mixed Color  -->
        <Frame Grid.Row="2">
            <Grid ColumnDefinitions="*" RowDefinitions="auto, *, Auto">
                <Label
                    Grid.Row="0"
                    FontAttributes="Bold"
                    FontSize="16"
                    Text="Mixed Color" />

                <Grid
                    Grid.Row="1"
                    ColumnDefinitions="150, *"
                    ColumnSpacing="20">
                    <!--  Preview Box  -->
                    <BoxView
                        Grid.Column="0"
                        Margin="0,5"
                        BackgroundColor="Transparent"
                        CornerRadius="15"
                        HeightRequest="150"
                        VerticalOptions="Start"
                        WidthRequest="150"
                        Color="{Binding MixedColor}" />

                    <!--  Composition List  -->
                    <ScrollView Grid.Column="1" VerticalOptions="Start">
                        <CollectionView ItemsSource="{Binding MixComponents}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid
                                        Margin="0,1"
                                        ColumnDefinitions="Auto, Auto, Auto, *"
                                        ColumnSpacing="10">

                                        <Label
                                            Grid.Column="0"
                                            FontAttributes="Bold"
                                            FontSize="24"
                                            Text="-"
                                            TextColor="{StaticResource MrbUNBlue}"
                                            VerticalOptions="Center"
                                            WidthRequest="20">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CreatePaletteViewModel}}, Path=DecrementCommand}" CommandParameter="{Binding .}" />
                                            </Label.GestureRecognizers>
                                        </Label>
                                        <BoxView
                                            Grid.Column="1"
                                            HeightRequest="20"
                                            VerticalOptions="Center"
                                            WidthRequest="20"
                                            Color="{Binding Color}" />
                                        <Label
                                            Grid.Column="2"
                                            FontAttributes="Bold"
                                            FontSize="24"
                                            Text="+"
                                            TextColor="{StaticResource MrbUNBlue}"
                                            VerticalOptions="Center"
                                            WidthRequest="20">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CreatePaletteViewModel}}, Path=IncrementCommand}" CommandParameter="{Binding .}" />
                                            </Label.GestureRecognizers>
                                        </Label>
                                        <Label
                                            Grid.Column="3"
                                            FontAttributes="Bold"
                                            FontSize="14"
                                            Text="{Binding DisplayText}"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </ScrollView>
                </Grid>

                <!--  Action Buttons  -->
                <HorizontalStackLayout
                    Grid.Row="2"
                    Margin="0"
                    Padding="0"
                    HeightRequest="35"
                    HorizontalOptions="Start"
                    Spacing="15">
                    <Button
                        Padding="0"
                        BackgroundColor="Transparent"
                        Command="{Binding SaveVariantCommand}"
                        FontAttributes="None"
                        FontFamily="fontello"
                        Text="&#xe80b; Save Variant"
                        TextColor="{StaticResource MrbUNBlue}" />
                    <Button
                        Padding="0"
                        BackgroundColor="Transparent"
                        Command="{Binding MatchCommand}"
                        FontAttributes="None"
                        FontFamily="fontello"
                        Text="&#xe800; Match"
                        TextColor="{StaticResource MrbUNBlue}" />
                    <Button
                        Padding="0"
                        BackgroundColor="Transparent"
                        Command="{Binding EstimateCommand}"
                        FontAttributes="None"
                        FontFamily="fontello"
                        Text="&#xe808; Estimate"
                        TextColor="{StaticResource MrbUNBlue}" />
                    <Button
                        Padding="0"
                        BackgroundColor="Transparent"
                        Command="{Binding ClearCommand}"
                        FontAttributes="None"
                        FontFamily="fontello"
                        Text="&#xe80e; Clear"
                        TextColor="{StaticResource MrbUNBlue}" />
                </HorizontalStackLayout>
            </Grid>
        </Frame>

        <!--  Variants  -->
        <Frame Grid.Row="3" Margin="10,5,10,10">
            <VerticalStackLayout Spacing="10">
                <Label
                    FontAttributes="Bold"
                    FontSize="16"
                    Text="Variants" />

                <CollectionView
                    HeightRequest="100"
                    ItemsSource="{Binding Variants}"
                    SelectedItem="{Binding SelectedVariant}"
                    SelectionMode="Single">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2">
                                <BoxView
                                    BackgroundColor="Transparent"
                                    CornerRadius="5"
                                    HeightRequest="40"
                                    WidthRequest="40"
                                    Color="{Binding PaletteColor}" />
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="10"
                                    HorizontalOptions="Center"
                                    Text="{Binding PaletteName}" />
                                <Label
                                    FontSize="8"
                                    HorizontalOptions="Center"
                                    Text="{Binding PaletteColorHex}"
                                    TextColor="{AppThemeBinding Light={StaticResource Gray600},
                                                                Dark={StaticResource Gray400}}" />
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup Name="CommonStates">
                                        <VisualState Name="Normal" />
                                        <VisualState Name="Selected">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </Frame>

    </Grid>
</ContentPage>