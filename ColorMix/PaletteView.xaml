<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ColorMix.PaletteView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:ColorMix.Helpers"
    xmlns:local="clr-namespace:ColorMix"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <ContentPage.Resources>
        <ResourceDictionary>
            <helpers:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <!--  Shell.TitleView with Search, Sort, Selection  -->
    <Shell.TitleView>
        <Grid ColumnDefinitions="*, Auto">
            <!--  Normal Mode: Page Title  -->
            <Label
                Grid.Column="0"
                FontAttributes="Bold"
                FontSize="20"
                IsVisible="{Binding IsSearching, Converter={StaticResource InvertedBoolConverter}}"
                Text="Palettes"
                TextColor="{AppThemeBinding Light={StaticResource MrbSpaceCadet},
                                            Dark={StaticResource White}}"
                VerticalOptions="Center" />

            <!--  Search Mode: Search Entry  -->
            <Border
                Grid.Column="0"
                IsVisible="{Binding IsSearching}"
                Stroke="{AppThemeBinding Light={StaticResource MrbSpaceCadet},
                                         Dark={StaticResource White}}"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2"
                VerticalOptions="Center">
                <Entry
                    Margin="10,5"
                    Placeholder="Search palettes..."
                    Text="{Binding SearchText}"
                    TextColor="{AppThemeBinding Light={StaticResource MrbSpaceCadet},
                                                Dark={StaticResource White}}" />
            </Border>

            <!--  Action Buttons  -->
            <HorizontalStackLayout
                Grid.Column="1"
                Margin="15,0"
                Spacing="15"
                VerticalOptions="Center">

                <!--  Selection Mode Buttons  -->
                <HorizontalStackLayout IsVisible="{Binding IsSelectionMode}" Spacing="10">
                    <!--  Select All  -->
                    <ImageButton
                        Command="{Binding SelectAllCommand}"
                        HeightRequest="20"
                        WidthRequest="25">
                        <ImageButton.Source>
                            <FontImageSource
                                FontFamily="fontello"
                                Glyph="&#xf14a;"
                                Size="30"
                                Color="{AppThemeBinding Light={StaticResource MrbSpaceCadet},
                                                        Dark={StaticResource White}}" />
                        </ImageButton.Source>
                    </ImageButton>

                    <!--  Batch Delete  -->
                    <ImageButton
                        Command="{Binding BatchDeleteCommand}"
                        HeightRequest="20"
                        WidthRequest="25">
                        <ImageButton.Source>
                            <FontImageSource
                                FontFamily="fontello"
                                Glyph="&#xe80d;"
                                Size="30"
                                Color="{StaticResource MrbRed}" />
                        </ImageButton.Source>
                    </ImageButton>

                    <!--  Batch Duplicate  -->
                    <ImageButton
                        Command="{Binding BatchDuplicateCommand}"
                        HeightRequest="20"
                        WidthRequest="25">
                        <ImageButton.Source>
                            <FontImageSource
                                FontFamily="fontello"
                                Glyph="&#xf0c5;"
                                Size="30"
                                Color="{AppThemeBinding Light={StaticResource MrbSpaceCadet},
                                                        Dark={StaticResource White}}" />
                        </ImageButton.Source>
                    </ImageButton>

                    <!--  Batch Share  -->
                    <ImageButton
                        Command="{Binding BatchShareCommand}"
                        HeightRequest="20"
                        WidthRequest="25">
                        <ImageButton.Source>
                            <FontImageSource
                                FontFamily="fontello"
                                Glyph="&#xf1e0;"
                                Size="30"
                                Color="{AppThemeBinding Light={StaticResource MrbSpaceCadet},
                                                        Dark={StaticResource White}}" />
                        </ImageButton.Source>
                    </ImageButton>
                </HorizontalStackLayout>

                <!--  Normal Mode Buttons  -->
                <HorizontalStackLayout IsVisible="{Binding IsSelectionMode, Converter={StaticResource InvertedBoolConverter}}" Spacing="15">
                    <!--  Search Toggle  -->
                    <ImageButton
                        Command="{Binding ToggleSearchCommand}"
                        HeightRequest="20"
                        WidthRequest="25">
                        <ImageButton.Source>
                            <FontImageSource
                                FontFamily="fontello"
                                Glyph="&#xe800;"
                                Size="30"
                                Color="{AppThemeBinding Light={StaticResource MrbSpaceCadet},
                                                        Dark={StaticResource White}}" />
                        </ImageButton.Source>
                    </ImageButton>

                    <!--  Sort  -->
                    <ImageButton
                        Command="{Binding OpenSortCommand}"
                        HeightRequest="20"
                        WidthRequest="25">
                        <ImageButton.Source>
                            <FontImageSource
                                FontFamily="fontello"
                                Glyph="&#xf161;"
                                Size="30"
                                Color="{AppThemeBinding Light={StaticResource MrbSpaceCadet},
                                                        Dark={StaticResource White}}" />
                        </ImageButton.Source>
                    </ImageButton>
                </HorizontalStackLayout>

                <!--  Selection Mode Toggle (Always Visible)  -->
                <ImageButton
                    Command="{Binding ToggleSelectionModeCommand}"
                    HeightRequest="20"
                    WidthRequest="25">
                    <ImageButton.Source>
                        <FontImageSource
                            FontFamily="fontello"
                            Glyph="&#xe802;"
                            Size="30"
                            Color="{AppThemeBinding Light={StaticResource MrbSpaceCadet},
                                                    Dark={StaticResource White}}" />
                    </ImageButton.Source>
                </ImageButton>
            </HorizontalStackLayout>
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout>
            <CollectionView
                HorizontalOptions="Center"
                ItemsSource="{Binding Palettes}"
                SelectionMode="Single">
                <CollectionView.Behaviors>
                    <toolkit:EventToCommandBehavior Command="{Binding PaletteSelectedCommand}" EventName="SelectionChanged" />
                </CollectionView.Behaviors>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="10,5" HeightRequest="180">
                            <Grid
                                Padding="0"
                                ColumnDefinitions="Auto, *, auto"
                                ColumnSpacing="5"
                                RowDefinitions="Auto, *, Auto"
                                RowSpacing="2">

                                <!--  Selection Checkbox  -->
                                <CheckBox
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    HeightRequest="25"
                                    IsChecked="{Binding IsSelected}"
                                    IsVisible="{Binding Source={RelativeSource AncestorType={x:Type local:PaletteView}}, Path=BindingContext.IsSelectionMode}"
                                    VerticalOptions="Center"
                                    WidthRequest="25">
                                    <CheckBox.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:PaletteView}}, Path=BindingContext.ToggleSelectionCommand}" CommandParameter="{Binding .}" />
                                    </CheckBox.GestureRecognizers>
                                </CheckBox>
                                <!--  Palette Name  -->
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    HorizontalOptions="Start"
                                    LineBreakMode="TailTruncation"
                                    Text="{Binding PaletteName}"
                                    VerticalOptions="Center" />

                                <!--  Action Buttons  -->
                                <HorizontalStackLayout
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Margin="0,0,5,0"
                                    HorizontalOptions="End"
                                    IsVisible="{Binding Source={RelativeSource AncestorType={x:Type local:PaletteView}}, Path=BindingContext.IsSelectionMode, Converter={StaticResource InvertedBoolConverter}}"
                                    Spacing="15"
                                    VerticalOptions="Center">
                                    <Label
                                        FontFamily="fontello"
                                        FontSize="20"
                                        Style="{StaticResource SecondaryLabel}"
                                        Text="&#xf0c5;">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:PaletteView}}, Path=BindingContext.DuplicateCommand}" CommandParameter="{Binding .}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <Label
                                        FontFamily="fontello"
                                        FontSize="20"
                                        Style="{StaticResource SecondaryLabel}"
                                        Text="&#xe80c;">
                                        <!--  Edit Icon  -->
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:PaletteView}}, Path=BindingContext.EditCommand}" CommandParameter="{Binding .}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <Label
                                        FontFamily="fontello"
                                        FontSize="20"
                                        Style="{StaticResource SecondaryLabel}"
                                        Text="&#xf1e0;">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:PaletteView}}, Path=BindingContext.ShareCommand}" CommandParameter="{Binding .}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                </HorizontalStackLayout>

                                <Grid
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    Margin="0,10"
                                    ColumnDefinitions="auto,*"
                                    ColumnSpacing="5"
                                    HorizontalOptions="Fill"
                                    RowDefinitions="*,*"
                                    RowSpacing="5"
                                    VerticalOptions="Fill">
                                    <!--  Big Square (Mixed Color)  -->
                                    <RoundRectangle
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        CornerRadius="15"
                                        Fill="{Binding PaletteColor}"
                                        HeightRequest="115"
                                        HorizontalOptions="Start"
                                        Stroke="{AppThemeBinding Dark=White,
                                                                 Light=Black}"
                                        StrokeThickness="5"
                                        VerticalOptions="Start"
                                        WidthRequest="115" />

                                    <!--  Variants List (Top List)  -->
                                    <CollectionView
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="0,5,0,0"
                                        HeightRequest="60"
                                        HorizontalOptions="Start"
                                        ItemsSource="{Binding Variants}"
                                        VerticalOptions="Start">
                                        <CollectionView.ItemsLayout>
                                            <LinearItemsLayout ItemSpacing="5" Orientation="Horizontal" />
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <VerticalStackLayout Spacing="2">
                                                    <BoxView
                                                        BackgroundColor="Transparent"
                                                        CornerRadius="5"
                                                        HeightRequest="40"
                                                        WidthRequest="60"
                                                        Color="{Binding PaletteColor}" />
                                                    <Label
                                                        FontSize="10"
                                                        HorizontalOptions="Center"
                                                        LineBreakMode="TailTruncation"
                                                        MaximumWidthRequest="40"
                                                        Style="{StaticResource SecondaryLabel}"
                                                        Text="{Binding PaletteName}" />
                                                </VerticalStackLayout>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>

                                    <!--  Palette Colors List (Bottom List)  -->
                                    <CollectionView
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Margin="0,5,0,0"
                                        HeightRequest="60"
                                        HorizontalOptions="Start"
                                        ItemsSource="{Binding PaletteColors}"
                                        VerticalOptions="Start">
                                        <CollectionView.ItemsLayout>
                                            <LinearItemsLayout ItemSpacing="5" Orientation="Horizontal" />
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <VerticalStackLayout Spacing="2">
                                                    <BoxView
                                                        BackgroundColor="Transparent"
                                                        CornerRadius="5"
                                                        HeightRequest="40"
                                                        WidthRequest="40"
                                                        Color="{Binding Color}" />
                                                    <Label
                                                        FontSize="10"
                                                        HorizontalOptions="Center"
                                                        LineBreakMode="TailTruncation"
                                                        MaximumWidthRequest="50"
                                                        Style="{StaticResource SecondaryLabel}"
                                                        Text="{Binding ColorName}" />
                                                </VerticalStackLayout>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </Grid>

                                <!--  Info  -->
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    FontSize="12"
                                    HorizontalOptions="Start"
                                    LineBreakMode="TailTruncation"
                                    Text="{Binding DisplayText}"
                                    TextColor="{AppThemeBinding Light={StaticResource Gray600},
                                                                Dark={StaticResource Gray400}}"
                                    VerticalOptions="Center" />


                                <!--  Delete Button  -->
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    FontFamily="IconFont"
                                    FontSize="20"
                                    HorizontalOptions="End"
                                    IsVisible="{Binding Source={RelativeSource AncestorType={x:Type local:PaletteView}}, Path=BindingContext.IsSelectionMode, Converter={StaticResource InvertedBoolConverter}}"
                                    Text="&#xE80d;"
                                    TextColor="{StaticResource MrbRed}"
                                    VerticalOptions="Center">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:PaletteView}}, Path=BindingContext.DeleteCommand}" CommandParameter="{Binding .}" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
